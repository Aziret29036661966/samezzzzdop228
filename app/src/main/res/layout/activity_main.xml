<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="440dp"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

    <TextView
        android:id="@+id/rr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卐卐Выполните вход или зарегистрируйтесь卐卐"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="90dp"
        app:layout_constraintTop_toBottomOf="@id/ff"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/rrr"
        android:layout_width="350sp"
        android:layout_height="50dp"
        android:text="Введите ваш Email"
        android:textColor="@color/black"
        android:background = "@drawable/rr"
        app:layout_constraintTop_toBottomOf="@id/rr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/tt"
        android:layout_width="350sp"
        android:layout_height="50dp"
        android:background ="@drawable/rr"
        android:text="Введите пароль"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/rrr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/rt"
        android:layout_width="350sp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange"
        android:background="@drawable/rr"
        android:layout_marginTop="10dp"
        android:text="Войти"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
            android:text="Забыли пороль?"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/rt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
</androidx.constraintlayout.widget.ConstraintLayout>